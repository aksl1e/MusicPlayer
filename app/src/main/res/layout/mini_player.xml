<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mini_player"
    android:background="@color/black"
    android:clickable="true"
    android:focusable="true"
    android:padding="5dp"
    android:layout_alignParentBottom="true">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/def_song_art"
        android:id="@+id/bottom_player_img"
        android:scaleType="centerCrop"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/notification_next"
        android:id="@+id/bottom_player_next"
        android:scaleType="centerCrop"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/notification_pause"
        android:id="@+id/bottom_player_playPause"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/bottom_player_next"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_player_songName"
        android:text="SongName"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/bottom_player_img"
        android:textSize="18sp"
        android:maxLines="1"
        android:layout_toStartOf="@id/bottom_player_playPause"
        android:fontFamily="@font/spotify_bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_player_songArtist"
        android:text="Artist Name"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/bottom_player_img"
        android:layout_below="@id/bottom_player_songName"
        android:textSize="14sp"
        android:maxLines="1"
        android:layout_toStartOf="@id/bottom_player_playPause"
        android:fontFamily="@font/spotify_bold" />

</RelativeLayout>